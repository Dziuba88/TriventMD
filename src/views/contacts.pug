            li: span.contact
              svg.icon: use(xlink:href="#icon-stock")
              span Магазин: Construct DEPO,<br>ул. Кодрилор 16, оф. 75
            li: a.contact(href="tel:+373 22 854 006")
              svg.icon: use(xlink:href="#icon-telephone")
              span +373 22 854 006
            li: a.contact(href="tel:+373 69 777 383")
              svg.icon: use(xlink:href="#icon-phone")
              span +373 69 777 383
