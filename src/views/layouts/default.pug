                    svg.icon: use(xlink:href="img/sprite.svg#icon-phone")
                    span +373 69 777 383
                  a(href="mailto:info@trivent.md")
                    svg.icon: use(xlink:href="img/sprite.svg#icon-envelope")
                    span info@trivent.md
                .trv-header__contacts
                  a(href="tel:+373 22 854 006")
                    svg.icon: use(xlink:href="img/sprite.svg#icon-telephone")
                    span +373 22 854 006
                  a(href="tel:+373 22 854 925")
                    svg.icon: use(xlink:href="img/sprite.svg#icon-fax")
                    span +373 22 854 925
                .trv-header__action
                  button.btn.btn-accent(data-modal="#calc-form")
                    svg.icon: use(xlink:href="img/sprite.svg#icon-calculator")
