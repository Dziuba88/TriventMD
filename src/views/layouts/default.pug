        .navbar
          .container
            .navbar__wraper
              .navbar__left
                button.show__navbar: svg.icon: use(xlink:href="img/sprite.svg#icon-bars")
                .navbar__nav
                  ul.vmenu
                    li.vmenu__item(class=title==='Вентиляция'?'current':''): a.vmenu__link(href="")
                      svg.icon: use(xlink:href="img/sprite.svg#icon-fan")
                      span Вентиляция
                    li.vmenu__item: a.vmenu__link(href="")
                      svg.icon: use(xlink:href="img/sprite.svg#icon-cold")
                      span Кондиционеры
                    li.vmenu__item: a.vmenu__link(href="")
                      svg.icon: use(xlink:href="img/sprite.svg#icon-warm")
                      span Отопление
                    li.vmenu__item: a.vmenu__link(href="")
                      svg.icon: use(xlink:href="img/sprite.svg#icon-sett")
                      span Монтажные элементы
                form.product__search(method='get' action='')
                  label.icon(for='header-search'): svg.icon: use(xlink:href="img/sprite.svg#icon-search")
                  input#header-search(autocomplete='off' type='search' name='query' placeholder='Поиск по каталогу')
                  button.btn.xs.btn-teal(type='submit') Найти
              .navbar__right
                button.navbar__search-toogle: svg.icon: use(xlink:href="img/sprite.svg#icon-search")
        .navbar__mobile
          .container
            .navbar__mobile__header
              .header-left
                .navbar__mobile__lang
                  .dropdown
                    span.dropdown__toggle(data-toggle="dropdown") 
                      span Ru
                      svg.dropdown__caret: use(xlink:href="img/sprite.svg#caret")
                    .dropdown__menu
                      ul.hmenu
                        li.hmenu__item.current: a.hmenu__link(href="#") Ru
                        li.hmenu__item: a.hmenu__link(href="#") Md
