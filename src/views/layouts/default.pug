    //CALC MODAL
    #calc-form.modal
      h3.modal__title Расчет проекта вентиляции вашего дома
      form(action="").form
        .row
          .col.sm-6: .form__input: input(type="text", placeholder="Имя *", required, name="calc_firstname")
          .col.sm-6: .form__input: input(type="text", placeholder="Фамилия *", required, name="calc_lastname")
          .col.sm-6: .form__input: input(type="tel", placeholder="Телефон *", required, name="calc_tel")
          .col.sm-6: .form__input: input(type="email", placeholder="e-Mail *", required, name="calc_email")
        .inputbox
          input#calc_files.inputfile(type='file' name='calc_files' data-multiple-caption='{count} файлов выбрано' multiple='')
          label(for='calc_files')
            span
            strong
              svg.icon: use(xlink:href="img/sprite.svg#icon-upload")
              | Выберите файлы&mldr;
          small приложите один или несколько файлов до 10МБ в формате PDF, Word, JPEG
        .form__input: textarea(cols="30", rows="10", placeholder="Комментарий", name="calc_comment")
        .form__footer.center-block: button(type="submit").btn.lg.btn-accent отправить

    
