          .col.md-3.sm-4
            .trv-footer__contacts
              ul.fmenu
                li.fmenu__item: span.fmenu__text
                  svg.icon: use(xlink:href="img/sprite.svg#icon-address")
                  span 2071, РМ Кишинев<br>ул. Alba Iulia 75
                li.fmenu__item: a.fmenu__link(href="tel:+373 69 777 383")
                    svg.icon: use(xlink:href="img/sprite.svg#icon-phone")
