extends layouts/default
block VARIABLES
  - var title = 'Вентиляция'
  - var page = 'catalog--item'
block CONTENT
  // breadcrumbs
  .breadcrumbs
    .container
      ul.vmenu
        li.vmenu__item.first: a.vmenu__link(href="")
